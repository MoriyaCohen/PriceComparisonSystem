{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning",
      "PriceComparison.Application.Services.BinaProjectsDownloadService": "Debug",
      "System.Net.Http.HttpClient": "Information"
    }
  },

  "BinaProjects": {
    "ConfigFilePath": "BinaProjectsNetworkConfig.json",
    "DownloadFolder": "DownloadedFiles/Development",
    "TimeoutSeconds": 60,
    "RetryCount": 2,
    "RetryDelaySeconds": 1,
    "MaxConcurrentDownloads": 2,
    "MaxConnectionsPerServer": 5,
    "UserAgent": "Mozilla/5.0 (Development) BinaProjects-Downloader/1.0",
    "AcceptLanguage": "he-IL,he;q=0.9,en;q=0.8",
    "UseCookies": false,
    "IgnoreSSLErrors": false,
    "AdditionalHeaders": {
      "Cache-Control": "no-cache",
      "Pragma": "no-cache",
      "X-Development-Mode": "true"
    }
  },

  "Application": {
    "Environment": "Development",
    "EnableDetailedErrors": true,
    "EnableSensitiveDataLogging": true
  }
}