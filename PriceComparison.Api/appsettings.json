{
    "Logging": {
        "LogLevel": {
            "Default": "Information",
            "Microsoft.AspNetCore": "Warning",
            "PriceComparison": "Debug"
        }
    },
    "AllowedHosts": "*",
    "ConnectionStrings": {
        "DefaultConnection": "Server=DESKTOP-1VUANBN\\mssqllocaldb;Database=PriceComparisonDb;Trusted_Connection=true;MultipleActiveResultSets=true"
    },
    "LocalXmlData": {
        "FolderPath": "LocalXmlData",
        "AutoRefreshIntervalMinutes": 60,
        "EnableFileWatcher": false
    },
    "BarcodeValidation": {
        "MinLength": 8,
        "MaxLength": 13,
        "AllowedFormats": [ "EAN8", "EAN13", "UPC" ]
    },
    "PriceComparison": {
        "MaxResultsPerSearch": 10,
        "CacheExpirationMinutes": 30
    },
    "Serilog": {
        "Using": [ "Serilog.Sinks.Console", "Serilog.Sinks.File" ],
        "MinimumLevel": {
            "Default": "Information",
            "Override": {
                "Microsoft": "Warning",
                "System": "Warning",
                "PriceComparison": "Debug"
            }
        },
        "WriteTo": [
            {
                "Name": "Console",
                "Args": {
                    "outputTemplate": "{Timestamp:yyyy-MM-dd HH:mm:ss} [{Level:u3}] {Message:lj}{NewLine}{Exception}"
                }
            },
            {
                "Name": "File",
                "Args": {
                    "path": "Logs/log-.txt",
                    "rollingInterval": "Day",
                    "retainedFileCountLimit": 7,
                    "outputTemplate": "{Timestamp:yyyy-MM-dd HH:mm:ss} [{Level:u3}] {SourceContext} {Message:lj}{NewLine}{Exception}"
                }
            }
        ]
    }
}